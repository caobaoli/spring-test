<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<!-- 打开annotation配置 -->
	<!-- <context:annotation-config />
	<context:component-scan base-package="com.lxp.service"></context:component-scan> -->
	
	<!-- 被代理的类 -->
	<bean id="userServiceTarget" class="com.lxp.service.impl.UserServiceImpl"></bean>
	
	<!-- 代理类 -->
	<bean id="loggerAdvice" class="com.lxp.advice.LoggerAdvice"></bean>
	
	<!-- spring代理机制 -->
	<bean id="userService" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="userServiceTarget"></property>
		<property name="interceptorNames">
			<list>
				<value>loggerAdvice</value>
			</list>
		</property>
	</bean>
</beans>
